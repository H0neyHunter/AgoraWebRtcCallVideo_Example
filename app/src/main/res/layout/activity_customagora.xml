<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CustomAgoraActivity">

    <FrameLayout
        android:id="@+id/remote_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9E9999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/local_user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="52dp"
        android:background="#7E7A7A"
        app:layout_constraintBottom_toBottomOf="@+id/remote_user"
        app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/joinCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/leaveCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-48dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/remote_user"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>